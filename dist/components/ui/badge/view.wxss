.c-badge {
  display: inline-block;
  position: relative;
}
.c-badge .c-badge-icon {
  color: #00994f;
  font-size: 50rpx;
}
.c-badge .c-badge-text {
  position: absolute;
  top: -20rpx;
  right: -22rpx;
  padding: 0 4rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  border-radius: 100%;
  background-color: #f56449;
}
