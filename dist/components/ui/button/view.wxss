.c-button {
  padding: 0 40rpx;
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  background: #00994f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 0px;
}
.c-button::after {
  border: 0;
}
.c-button.c-button-shape-round {
  border-radius: 44rpx;
}
.c-button.c-button-shape-arc {
  border-radius: 8rpx;
}
.c-button.c-button-size-l {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 36rpx;
}
.c-button.c-button-size-s {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}
.c-button.c-button-long {
  display: block;
}
.c-button.c-button-type-error {
  background: #f56449;
  border: 1rpx solid #f56449;
}
.c-button.c-button-type-info {
  background: #f2f2f2;
  color: #999;
}
.c-button.c-button-disabled {
  background: #d8d8d8;
  color: #fff;
}
.c-button.c-button-ghost {
  background: #fff;
  border: 1rpx solid #efefef;
  color: #333;
}
.c-button.c-button-ghost.c-button-type-error {
  color: #f56449;
  border: 1rpx solid #f56449;
}
.c-button.c-button-ghost.c-button-type-success {
  color: #00994f;
  border: 1rpx solid #00994f;
}
.c-button.c-button-ghost.c-button-disabled {
  border: 1rpx solid #d8d8d8;
  color: #999;
  background: #fff;
}
.c-button.c-button-hover {
  opacity: 0.7;
}
