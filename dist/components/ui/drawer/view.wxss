.c-drawer.c-mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  visibility: hidden;
  transition: all 0.5s;
  z-index: 99;
}
.c-drawer.c-mask-visible {
  background: rgba(0,0,0,0.7);
  visibility: visible;
}
.c-drawer >.c-content {
  background: #fff;
  position: absolute;
  transition: all 0.2s;
  width: 100%;
}
.c-drawer >.c-content-bottom {
  bottom: 0;
  transform: translateY(100%);
}
.c-drawer >.c-content-bottom-visible {
  transform: translateY(0);
}
.c-drawer >.c-content-top {
  transform: translateY(-100%);
}
.c-drawer >.c-content-top-visible {
  transform: translateY(0);
}
.c-drawer >.c-content-left {
  transform: translateX(-100%);
  height: 100%;
  width: auto;
}
.c-drawer >.c-content-left-visible {
  transform: translateX(0);
}
.c-drawer >.c-content-right {
  right: 0;
  transform: translateX(100%);
  height: 100%;
  width: auto;
}
.c-drawer >.c-content-right-visible {
  transform: translateX(0);
}
