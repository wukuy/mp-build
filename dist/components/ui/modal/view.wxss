.c-modal-wrap {
  color: #333;
}
.c-modal-wrap.c-mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  visibility: hidden;
  transition: all 0.2s;
}
.c-modal-wrap.c-mask-visible {
  background: rgba(0,0,0,0.7);
  visibility: visible;
}
.c-modal-wrap .c-modal {
  width: 72%;
  text-align: center;
  min-height: 300rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  visibility: hidden;
  transform: scale(0.8);
  opacity: 0;
  transition: all 0.2s;
  border-radius: 8rpx;
  overflow: hidden;
}
.c-modal-wrap .c-modal.c-modal-visible {
  visibility: visible;
  transform: scale(1);
  opacity: 1;
}
.c-modal-wrap .c-modal .c-title {
  font-size: 36rpx;
  padding-top: 50rpx;
}
.c-modal-wrap .c-modal .c-content {
  flex: 1;
  padding: 50rpx;
}
.c-modal-wrap .c-modal .c-btn {
  display: flex;
}
.c-modal-wrap .c-modal .c-btn c-button {
  flex: 1;
}
.c-modal-wrap .c-modal c-icon {
  display: block;
  font-size: 96rpx;
  color: #fe835d;
  text-align: center;
}
