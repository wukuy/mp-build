.c-swiper-wrap {
  position: relative;
}
.c-swiper-wrap .c-swiper-slide-image {
  width: 100%;
  height: 100%;
  background-size: cover;
}
.c-swiper-wrap .c-swiper-indicator {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  height: 64rpx;
  padding: 0 42rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 32rpx;
  color: #fff;
  line-height: 64rpx;
}
.c-swiper-wrap .c-swiper-indicator .c-idx {
  font-size: 40rpx;
  font-weight: 600;
}
.c-swiper-wrap .c-swiper-indicator .c-count {
  font-size: 28rpx;
}
