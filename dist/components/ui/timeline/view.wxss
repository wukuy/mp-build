.c-time-line {
  padding: 80rpx 20rpx 20rpx;
}
.c-time-line .c-box {
  font-size: 28rpx;
}
.c-time-line .c-box:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0;
}
.c-time-line .c-date {
  float: left;
  color: #666;
  font-size: 24rpx;
  text-align: center;
  transform: translateY(-56rpx);
}
.c-time-line .c-date .c-year {
  font-size: 20rpx;
}
.c-time-line .c-content {
  position: relative;
  margin-left: 150rpx;
  border-left: 1rpx solid #e1e1d1;
  padding: 0 20rpx 40rpx 40rpx;
}
.c-time-line .c-content .p-text-box {
  transform: translateY(-56rpx);
}
.c-time-line .c-content .p-text-box .c-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.c-time-line .c-content .p-text-box .c-operator {
  font-size: 24rpx;
  color: #999;
}
.c-time-line .c-spot {
  position: absolute;
  top: -40rpx;
  left: -20rpx;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 100%;
  background-color: #bfbfbf;
}
.c-time-line .c-box:last-child >.c-content {
  border-left: none;
}
