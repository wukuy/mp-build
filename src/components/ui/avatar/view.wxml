<view class="c-avatar" bindtap="clickImg">
    <image wx:if="{{type === 'head' && src}}" src="{{src}}?imageView2/1/w/60/h/60"
           class="c-head-m custom-class" style="border-radius: 100%"/>
    <image wx:if="{{type === 'head' && !src}}" src="../../../assets/img/head_default.png"
           class="c-head-m custom-class" style="border-radius: 100%"/>

    <image wx:if="{{type === 'material' && src}}" src="{{src + '?imageView2/1/w/60/h/60'}}"
           class="c-material-m custom-class" style="border-radius: 8rpx"/>
    <image wx:if="{{type === 'material' && !src}}" src="../../../assets/img/goods_default.jpg"
           class="c-material-m custom-class" style="border-radius: 4rpx"/>
</view>
