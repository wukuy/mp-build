@import "../../../assets/css/define.styl";

$prefix = c-drawer;

.{$prefix}{
    &.c-mask{
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        visibility: hidden;
        transition: all .5s;
        z-index: 99;
    }
    &.c-mask-visible{
        background: rgba(0,0,0,0.7);
        visibility: visible ;
    }
    >.c-content{
        background: $white;
        position: absolute;
        transition: all $transition-time;
        width: 100%;
    }
    >.c-content-bottom{
        bottom: 0;
        transform: translateY(100%);
        &-visible{
            transform: translateY(0);    
        }
    }
    >.c-content-top{
        transform: translateY(-100%);
        &-visible{
            transform: translateY(0);    
        }
    }
    >.c-content-left{
        transform: translateX(-100%);
        height: 100%;
        width: auto;
        &-visible{
            transform: translateX(0);    
        }
    }
    >.c-content-right{
        right: 0;
        transform: translateX(100%);
        height: 100%;
        width: auto;
        &-visible{
            transform: translateX(0);    
        }
    }
}