@import "../../../assets/css/define.styl";

$prefix = c-swiper;

.{$prefix}-wrap{
    position: relative;
    .{$prefix}-slide-image{
        width: 100%;
        height: 100%;
        background-size: cover;
    }
    .{$prefix}-indicator{
        position: absolute;
        right: 20rpx;
        bottom: 20rpx;
        height: 64rpx;
        padding: 0 42rpx;
        background: rgba(0, 0, 0, .6);
        border-radius: (@height / 2);
        color: $white;
        line-height: @height;
        .c-idx{
            font-size: 40rpx;
            font-weight: 600;
        }
        .c-count{
            font-size: 28rpx;
        }
    }
}
